@model SGCFT.Apresentacao.Models.TreinamentoViewModel
@{

    ViewBag.Title = "Index";
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

<h2>Cadastro de Treinamento</h2>

@if (ViewBag.Sucesso != null)
{
    if ((bool)ViewBag.Sucesso)
    {
        <div class="alert alert-success" role="alert">Treinamento cadastrado com sucesso</div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            @foreach (string mensagem in ViewBag.Mensagens as List<string>)
            {
                @mensagem
                <br />
            }
        </div>
    }
}

@using (Html.BeginForm("Index", "Treinamento", FormMethod.Post, new { id = "formTreinamento", @class = "form-group" }))
{

        <div class="row">
            <div class="form-group">
                <label class="control-label col-md-2">IdAutor: </label>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.IdAutor, new { id = "txtIdAutor", @class = "form-control", autocomplete = "off" })
                    <label class="warning">@Html.ValidationMessageFor(x => x.IdAutor)</label>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Tema: </label>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.Tema, new { id = "txtTema", @class = "form-control", autocomplete = "off" })
                    <label class="warning">@Html.ValidationMessageFor(x => x.Tema)</label>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Tipo de treinamento: </label>
                <div class="col-md-10">
                    @Html.EnumDropDownListFor(x => x.TipoTreinamento, "Selecione um tipo", new { @class = "form-control" })
                    <label class="warning">@Html.ValidationMessageFor(x => x.TipoTreinamento)</label>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Senha: </label>
                <div class="col-md-10">
                    @Html.PasswordFor(x => x.Senha, new { id = "txtSenha", @class = "form-control", autocomplete = "off" })
                    <label class="warning">@Html.ValidationMessageFor(x => x.Senha)</label>
                </div>
            </div>
            <div class="form-group">
            </div>
        </div>
    <div class="row">
        <button type="submit" class="btn btn-success">Salvar</button>
    </div>

}
